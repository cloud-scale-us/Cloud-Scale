{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Service": {
    "Name": "ScaleStreamerService",
    "DisplayName": "Scale Streamer Service",
    "Description": "Cloud-Scale Scale Streamer - Manages scale connections and data streaming"
  },
  "Database": {
    "Path": "%CommonApplicationData%\\ScaleStreamer\\scalestreamer.db",
    "AutoBackup": true,
    "BackupIntervalHours": 24
  },
  "Streaming": {
    "Enabled": true,
    "RtspPort": 8554,
    "HlsPort": 8888,
    "VideoWidth": 1920,
    "VideoHeight": 1080,
    "VideoFps": 30,
    "VideoBitrate": "2M"
  }
}
